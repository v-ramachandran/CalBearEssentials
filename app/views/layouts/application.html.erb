<!DOCTYPE html>
<html>
<head>
  <title>MyBearEssentials</title>
  <%= stylesheet_link_tag    "application" %>
  <%= yield(:header) if @content_for_header %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% [:notice, :error].each do |key| %>
       <% if flash[key] %>
          <div class="flash_<%= key %>">
                <p> <%= flash[key] %> </p>
          </div>
       <% end %>
   <% end %>

  <div id="everything">
        <div id="header">
            <div id="header_image"></div>
	          <div id="logout_link"> <%= link_to 'Logout', signout_path, :class => 'logout'%>
        </div>
    
        <div id="header_tabs"></div>    
        <div id="shadowdown"></div>
	
        <div id="content"><br />        
            <div id="contenttabs">
                <div id="tabs">
                    <ul>
                        <li><%= link_to "View Planner", planners_index_path %></li>
                        <li><%= link_to "Manage Planner", planners_plan_path %></li>
                        <li><%= link_to "Degree Check", planners_check_path %> </li>        
                    </ul>
                </div>
        
                <div id="contentcenter">
                <%= yield %>
                <!--Main Dashboard Content -->    
                </div>				
            </div>
        </div>
    
        <div id="footer">
            <div id="footer-inside">
                <a >Terms</a> |
                <a >Privacy</a> |
                <a >Thanks</a> |
                <a >Features</a>
                <br /> <br />
                <i> Copyright 2012  &copy; BearEssentials</i>
            </div>
        </div>
    </div>
</body>
</html>
